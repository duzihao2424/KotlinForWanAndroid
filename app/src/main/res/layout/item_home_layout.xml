<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/collect_img"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_like_not"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/collect_img">

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="1111111111"
            android:textColor="@color/textBlack"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_title">
        <TextView
            android:id="@+id/is_gzh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公众号"
            android:background="@drawable/frame_of_green"
            android:textSize="15dp"
            android:textColor="@android:color/holo_green_light"
            />

        <TextView
            android:id="@+id/home_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="作者：ddd"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/layout1">
            <TextView
                android:id="@+id/home_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:layout_weight="1"
                android:text="分类：ddd"/>

            <TextView
                android:id="@+id/home_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:layout_weight="1"
                android:text="时间：ddd"/>



        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>


</LinearLayout>
